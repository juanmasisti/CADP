
Program Practica6;

Var 
  Dolares: real;
  Dol_Pes: real;
  Com: real;
Begin
  Writeln('Ingresar cantidad de dolares:');
  Readln(Dolares);
  Writeln('Ingresar valor del dolar en pesos:');
  Readln(Dol_Pes);
  Writeln('Ingresar comision del banco:');
  Readln(Com);
  Writeln('Valor en pesos de la transaccion: ', Com/100*(Dolares*Dol_Pes)+
  Dolares
  *Dol_Pes: 1: 2);
End.
